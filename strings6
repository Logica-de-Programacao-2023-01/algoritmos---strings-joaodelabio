package main

import (
	"fmt"
	"strings"
)

func countWords(str string) int {
	words := strings.Fields(str)
	return len(words)
}

func main() {
	var input string
	fmt.Print("Digite uma frase: ")
	fmt.Scanln(&input)

	numWords := countWords(input)
	fmt.Printf("A frase cont√©m %d palavra(s).\n", numWords)
}
